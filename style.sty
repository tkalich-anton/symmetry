{%
	\ifthenelse{\boolean{\ex@shownum}}%
	{%
		\ifthenelse {\equal{\ex@mode}{item}}%
			{\textbf{[\currfilebase]}}%
			{\makebox[0.08\linewidth]{\textbf{[\currfilebase]}}}%
	}{}%
}%
{%
	\ifthenelse{\boolean{\ex@showrule}}%
	{\noindent\xhrulefill{silver}{.2mm}\\[0.2pt]\par}%
	{%
		%\par~\\[0.1pt]
	}%
}

\newenvironment{condition}%
{%
	\ifthenelse{\equal{\ex@mode}{notext}}%
	{%
		\ifthenelse{\equal{\ex@type}{equation}}%
		{Решить уравнение:}{}%
		\ifthenelse{\equal{\ex@type}{expression}}%
		{Упростить выражение:}{}%
		\ifthenelse{\equal{\ex@type}{eq_system}}%
		{Решить систему уравнений:}{}%
		\begin{center}
		}%
		{}%
}%
{%
	\ifthenelse{%
		\NOT\equal{\ex@type}{none}%
		\AND%
		\equal{\ex@mode}{notext}}%
		{%
			\end{center}
		}%
		{}%
}%
